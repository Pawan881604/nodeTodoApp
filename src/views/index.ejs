<%- include('./header') %>
<header>
    <!-- Header file for TODO Application -->
    <div class="todoheading">
        <h1>TODO APPLICATION</h1>
    </div>
</header>
<!-- HTMl section for main home page -->
<div class="form_class">
    <form id="getdatafromform" action="/" method="POST">
        <div class="desc_Class">
            <input id="desc" type="textarea" required name="desc" placeholder="what do you need to do">
        </div>
        <div class="select_and_input">
            <select id="cate" name="category" required>
                <option value="" disabled selected>Select your option</option>
                <option>Personal</option>
                <option>Work</option>
                <option>Claeaning</option>
                <option>Otheres</option>
            </select>
            <input id="date" class="datesValues" type="date" name="dateValue" placeholder="Due data dd/mm/yyyy" required>
        </div>
        <button class="buttonDesign colorGrey" id="submitButton" type="submit"><i class="fa fa-plus-square"> </i> Add
            Task</button>
        <!-- <button class="buttonDesign colorRed" id="deleteButton" type="submit"><i class="fa fa-trash-o"></i> Delete
            Task</button> -->

    </form>

</div>
